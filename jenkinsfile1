pipeline {
    agent { label 'Java' }
    stages { 
        stage ("SCM Checkin-1") {
            steps {
              git branch: 'master', url: 'https://github.com/Vishwanathms/SampleMaven'
            }
        }
        stage ("maven build") {
            tools {
                maven 'maven-3.6.2'
                jdk 'JDK1.8'
            }
            steps {
                sh "mvn package"
            }
        }
stage ("Build the Docker Image") {
            steps {
                sh "docker build . -t vishwacloudlab/tomcat-1"
            }
        }
stage ("Run the Container") {
            steps {
                sh "docker run -d -p 90:8080 --name cont01 vishwacloudlab/tomcat-1"
            }
        }
stage ("Push to Docker HUB") {
            steps {
                sh "docker push vishwacloudlab/tomcat-1:latest"
            }
        }
}
